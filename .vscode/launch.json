{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Workit API",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "run",
        "--project",
        "Workit.Api/Workit.Api.csproj"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "postDebugTask": "Open Workit Safari",
      "stopAtEntry": false
    },
    {
      "name": "Workit OwnerApp",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "run",
        "--project",
        "Workit.OwnerApp/Workit.OwnerApp.csproj"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "stopAtEntry": false
    },
    {
      "name": "Workit EmployeeApp",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "run",
        "--project",
        "Workit.EmployeeApp/Workit.EmployeeApp.csproj"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "stopAtEntry": false
    }
  ],
  "compounds": [
    {
      "name": "Workit - Run All",
      "configurations": [
        "Workit API",
        "Workit OwnerApp",
        "Workit EmployeeApp"
      ],
      "preLaunchTask": "Kill Workit Ports",
      "stopAll": true
    }
  ]
}
